<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="crateTable-user" author="petrikov05@gmail.com">
        <createTable tableName="user">
            <column name="id" type="BIGINT(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(30)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="password" type="varchar(70)">
                <constraints nullable="true"/>
            </column>
            <column name="role" type="varchar(30)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="crateTable-item" author="petrikov05@gmail.com">
        <createTable tableName="item">
            <column name="id" type="BIGINT(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(30)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
